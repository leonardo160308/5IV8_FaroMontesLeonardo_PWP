<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registro de estudiantes</title>
    <link rel="stylesheet" href="/14CRUDMYSQL/css/style.css">
</head>
<body>
    <h1>Registro de estudiantes</h1>
    <form action="/estudiantes" method="post">
        <label for="nombre">Nombre:</label>
        <input type="text" id="nombre" name="nombre" required>
        <label for="nombre">Edad:</label>
        <input type="number" id="edad" name="edad" required>
        <label for="curso">Curso:</label>
        <input type="text" id="curso" name="curso" required>
        <button type="submit">Registrar estudiante </button>
    </form>
    
    <ul>
        <% estudiantes.forEach(function(estudiante){ %>
            <li><strong><%= estudiante.nombre %></strong> (Edad: 
                <%= estudiante.edad %>, Curso: <%= estudiante.curso %>)
            <a href="/estudiantes/edit/<%=estudiante.id%>">editar</a>
            <a href="/estudiantes/delete/<%=estudiante.id%>">eliminar</a>
            </li>
        <% }); %>
    </ul>
</body>
</html>